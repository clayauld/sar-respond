:80

# API reverse proxy with path stripping
handle_path /api/caltopo/* {
	reverse_proxy caltopo-api:5000
}

# Realtime API (SSE) - disable buffering for PocketBase
handle /api/realtime {
	reverse_proxy rescue-respond:8090 {
		flush_interval -1
	}
}

# Default frontend reverse proxy
handle {
	reverse_proxy rescue-respond:8090
}
